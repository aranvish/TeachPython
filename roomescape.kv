#:kivy 1.8.0


<FrontScreen>:
    FloatLayout:      
        Image:
            source: 'Assets_Room.png'
            size: self.size
        ImgBtn:
            source: 'Assets_Arrow.png'
            text: 'go left'
            size_hint: .2,.2
            on_press: 
                root.manager.transition.direction = 'left'
                root.manager.current = 'left'
            pos: 600,100
        ImgBtn:
            size_hint: .2,.2
            text: 'go right'
            pos: 1,100
            on_press: 
                root.manager.transition.direction = 'right'
                root.manager.current = 'left'
        ImgBtn:
            source: 'Assets_Door2.png'
            size_hint: .2, .5
            pos: 300, 140
            on_press:
                self.popup_display("type your code here:")
            

<LeftScreen>:
    FloatLayout:
        Image:
            source: 'Assets_Room.png'
            size: self.size
        Button:
            size_hint: .2,.2
            pos: 20,20
            text: 'Hello World'
            on_press: root.manager.current = 'front'
        Image:
            source: 'Asset_Window.png'
            size_hint: .2,.3
            pos: 400, 300
        Image:
            source: 'Asset_Candle.png'
            size_hint: .01, .2
            pos: 200, 300

<RightScreen>:
    FloatLayout:      
        Image:
            source: 'Assets_Room.png'
            size: self.size
        ImgBtn:
            source: 'Assets_Arrow.png'
            text: 'go left'
            size_hint: .2,.2
            on_press: 
                root.manager.transition.direction = 'left'
                root.manager.current = 'left'
            pos: 600,100
        ImgBtn:
            size_hint: .2,.2
            text: 'go right'
            pos: 1,100
            on_press: 
                root.manager.transition.direction = 'right'
                root.manager.current = 'left'
        ImgBtn:
            source: 'Assets_Door2.png'
            size_hint: .2, .5
            pos: 300, 140
            on_press:
                root.manager.current = 'left'
        ImgBtn:
            source: 'Assets_Terminal2'
            

<BackScreen>:
    FloatLayout:      
        Image:
            source: 'Assets_Room.png'
            size: self.size
        ImgBtn:
            source: 'Assets_Arrow.png'
            text: 'go left'
            size_hint: .2,.2
            on_press: 
                root.manager.transition.direction = 'left'
                root.manager.current = 'left'
            pos: 600,100
        ImgBtn:
            size_hint: .2,.2
            text: 'go right'
            pos: 1,100
            on_press: 
                root.manager.transition.direction = 'right'
                root.manager.current = 'right'
        ImgBtn:
            source: 'Assets_Door2.png'
            size_hint: .2, .5
            pos: 300, 140
            on_press:
                root.manager.current = 'right'

<BackgroundScreenManager>
    canvas.before:
        BorderImage:
            texture: self.bk_img.texture
            pos: self.pos
            size: self.size